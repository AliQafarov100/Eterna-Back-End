@model List<MiniCard>
@{
    ViewData["Title"] = "Index";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Card table</h4>
            <p class="card-description">
                Add class <code>.table-dark</code>
            </p>
            <a asp-controller="MiniCard" asp-action="Create" style="color:white;font-size:20px" class="mb-3 btn btn-success">Create slider</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Icon
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                SubTitle
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (MiniCard card in Model)
                        {
                            <tr>
                                <td>
                                    @card.id
                                </td>
                                <td>
                                    @card.Icon
                                </td>
                                <td>
                                    @card.Title
                                </td>
                                <td>
                                    @if (card.Description.Length >= 15)
                                    {
                                        @(card.Description.Substring(0,15) + "...");
                                    }
                                    else
                                    {
                                        @card.Description
                                    }
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <div class="Detail">
                                            <a class="btn btn-success" asp-controller="MiniCard" asp-action="Detail" asp-route-id="@card.id">
                                                <i class="mdi mdi-details"></i>
                                            </a>
                                        </div>
                                        <div class="Edit">
                                            <a class="btn btn-primary" asp-controller="MiniCard" asp-action="Edit" asp-route-id="@card.id">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                        </div>
                                        <div class="Delete">
                                            <a class="btn btn-danger" asp-controller="MiniCard" asp-action="Delete" asp-route-id="@card.id">
                                                <i class="mdi mdi-delete-forever"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


