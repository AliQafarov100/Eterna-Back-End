@model MiniCard
@{
    ViewData["Title"] = "Create";
}

<form method="post">
    <div>
        <label>Icon: </label>
        <input asp-for="Icon" type="text" class="form-control" />
        <span asp-validation-for="Icon" class="text-dandger"></span>
    </div>
    <div>
        <label>Title: </label>
        <input asp-for="Title" type="text" class="form-control" />
        <span asp-validation-for="Title" class="text-dandger"></span>
    </div>
    <div>
        <label>Description: </label>
        <input asp-for="Description" type="text" class="form-control" />
        <span asp-validation-for="Description" class="text-dandger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create card</button>
    </div>
</form>

