@model List<Slider>
@{
    ViewData["Title"] = "Index";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Card table</h4>
            <p class="card-description">
                Add class <code>.table-dark</code>
            </p>
            <a asp-controller="Slider" asp-action="Create" style="color:white;font-size:20px" class="mb-3 btn btn-success">Create slider</a>
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th>
                                Id
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Title
                            </th>
                            <th>
                                SubTitle
                            </th>
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Slider slider in Model)
                        {
                            <tr>
                                <td>
                                    @slider.Id
                                </td>
                                <td>
                                    <img src="~/assets/Image/Slider/@slider.Image" style="width: 150px; height: 90px;" />
                                </td>
                                <td>
                                    @(slider.Title + " " + slider.TitleDedicated);
                                </td>
                                <td>
                                    @if (slider.SubTitle.Length > 30)
                                    {
                                        @(slider.SubTitle.Substring(0,30).ToString() + "...");
                                    }
                                    else
                                    {
                                        @slider.SubTitle
                                    }
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <div class="Detail">
                                            <a class="btn btn-success" asp-controller="Slider" asp-action="Detail" asp-route-id="@slider.Id">
                                                <i class="mdi mdi-details"></i>
                                            </a>
                                        </div>
                                        <div class="Edit">
                                            <a class="btn btn-primary" asp-controller="Slider" asp-action="Edit" asp-route-id="@slider.Id">
                                                <i class="mdi mdi-tooltip-edit"></i>
                                            </a>
                                        </div>
                                        <div class="Delete">
                                            <a class="btn btn-danger" asp-controller="Slider" asp-action="Delete" asp-route-id="@slider.Id">
                                                <i class="mdi mdi-delete-forever"></i>
                                            </a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

