@model Slider
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<form method="post" enctype="multipart/form-data">
    <div>
        <label>Title: </label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-dandger"></span>
    </div>
    <div>
        <label>Dedicated Title: </label>
        <input asp-for="TitleDedicated" class="form-control" />
        <span asp-validation-for="TitleDedicated" class="text-dandger"></span>
    </div>
    <div>
        <label>SubTitle: </label>
        <input asp-for="SubTitle" class="form-control" />
        <span asp-validation-for="SubTitle" class="text-dandger"></span>
    </div>
    <div>
        <label>Order: </label>
        <input asp-for="Order" class="form-control" />
        <span asp-validation-for="Order" class="text-dandger"></span>
    </div>
    <div>
        <label>Image: </label>
        <input asp-for="Photo" class="form-control" accept="image/*" />
        <span asp-validation-for="Photo" class="text-dandger"></span>
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Create slider</button>
    </div>
</form>