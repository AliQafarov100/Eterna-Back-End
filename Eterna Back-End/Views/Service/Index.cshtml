@model ServiceVM
@{
    ViewData["Title"] = "Index";
}

<main>
    <section id="home">
        <div class="container">
            <div class="row">
                <div class="locaction">
                    <p>Home / Services</p>
                    <p>Services</p>
                </div>
            </div>
        </div>
    </section>
    <section id="card">
        <div class="container">
            <div class="cart row justify-content-between  mt-5 text-center">
                @foreach (Card card in Model.Cards)
                {
                    <div class="cards col-lg-4 col-md-6 col-sm-12">
                        <div class="property">
                            <i class="@card.Icon"></i>
                            <p class="bold mt-3">@card.Title</p>
                            <p>@card.SubTitle</p>
                        </div>
                    </div>
                }
            </div>

        </div>
    </section>
    <section id="statistic">
        <div class="container">
            <div class="row">
                <div class="skills mt-5 text-center">
                    @foreach (Skill skill in Model.Skills)
                    {
                        <strong>@skill.Title</strong>
                    }
                    <div class="line mt-2">

                    </div>
                </div>
                <div class="staticAndDesc">
                    @foreach (Information info in Model.informations)
                    {
                        <p class="mt-3">
                            @info.Info
                        </p>
                    }
                    <div class="statistics-box d-flex justify-content-between">
                        <div class="image">
                            <img src="/assets/Image/Skills Image/skills-img.jpg" alt="">
                        </div>
                        <div class="progressive">
                            <strong>Voluptatem dignissimos provident quasi corporis voluptates</strong>
                            @foreach (AnotherDescription desc in Model.AnotherDescriptions)
                            {
                                <p>@desc.Descript</p>
                            }
                            @foreach (Progress progress in Model.Progresses)
                            {
                                <div class="write d-flex justify-content-between">
                                    <div>
                                        <p>@progress.SubjectName</p>
                                    </div>
                                    <div>
                                        <p>@progress.SubjectProgress</p>
                                    </div>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-danger" role="progressbar" style="width: @progress.ProgressValue%" aria-valuenow="@progress.ProgressValueNow" aria-valuemin="@progress.ProgressValueMin" aria-valuemax="@progress.ProgressValueMax"></div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="subscribe" class="mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="box d-flex justify-content-between mt-5">
                    <div class="description text-light col-sm-12 col-lg-6 col-md-12 col-12">
                        <h4>Our Newsletter</h4>
                        <p>Tamen quem nulla quae legam multos aute sint culpa legam noster magna</p>
                    </div>
                    <div class="login col-sm-12 col-lg-6 col-md-12 col-12">
                        <div class="label d-flex align-items-center">
                            <input type="text" class="">
                            <button class="w-25">Subscibe</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

